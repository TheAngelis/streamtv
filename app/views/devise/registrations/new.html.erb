 <div class="row-fluid ">
    <div class="span12 padding-page">
<br />
<br />


      <div class="container">

       <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <%= devise_error_messages! %>

<h2>Cadastre-se</h2>

<br />

 <div><%= f.label :name %>
  <%= f.text_field :name, autofocus: true, :class => "input-block-level" %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email, :class => "input-block-level" %></div>

<div><%= f.label :gender %><br />
  <%= f.select :gender, options_for_select([['male'], ['female']]), :class => "input-block-level" %></div>
<br />
  <div><%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off", :class => "input-block-level" %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input-block-level" %></div>

  <br />
  <div><%= f.submit "Cadastrar", { :class=>"btn btn-large btn-primary" } %></div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
</div>

